<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.cqs.wait.ResultActivity">

    <TextView android:text="@string/doc" android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="25sp"
        android:layout_centerHorizontal="true"
        android:gravity="center_horizontal"
        android:layout_margin="10dp"
        />


        <TextView
            android:id="@+id/tv_shi"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textSize="22sp"
            android:layout_centerInParent="true"
            android:layout_margin="10dp"
            android:text="实到人数"/>
        <TextView
            android:id="@+id/tv_fan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="22sp"
            android:layout_centerInParent="true"
            android:layout_margin="10dp"
            android:text="反对"
            android:layout_marginRight="10dp"
            android:layout_alignParentRight="true"
            />

        <TextView
            android:id="@+id/tv_ying"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textSize="22sp"
            android:text="应到人数"
            android:layout_margin="10dp"
            android:layout_above="@id/tv_shi"/>
        <TextView
            android:id="@+id/tv_zan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="22sp"
            android:text="赞成"
            android:layout_marginRight="10dp"
            android:layout_alignParentRight="true"
            android:layout_margin="10dp"
            android:layout_above="@id/tv_fan"
            />


        <TextView
            android:id="@+id/tv_biao"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textSize="22sp"
            android:text="表决状态"
            android:layout_margin="10dp"
            android:layout_above="@id/tv_ying"
            />
        <TextView
            android:id="@+id/tv_zhuang"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="22sp"
            android:text="状态"
            android:textColor="#ffff1309"
            android:layout_marginRight="10dp"
            android:layout_alignParentRight="true"
            android:layout_margin="10dp"
            android:layout_above="@id/tv_zan"
        />

    <TextView
        android:id="@+id/tv_qing"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textSize="22sp"
        android:text="请假人数"
        android:layout_margin="10dp"
        android:layout_below="@id/tv_shi"
        />

    <TextView
        android:id="@+id/tv_qi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="22sp"
        android:text="弃权"
        android:layout_marginRight="10dp"
        android:layout_alignParentRight="true"
        android:layout_margin="10dp"
        android:layout_below="@id/tv_fan"
        />



    <Button
        android:id="@+id/bt_exit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="后退"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        />

</RelativeLayout>
